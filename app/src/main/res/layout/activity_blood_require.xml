<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kalyansai.blooddonation1.BloodRequire">

<RelativeLayout
    android:layout_width="300dp"
    android:layout_height="500dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:id="@+id/relativeLayout2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bloodgroups"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT REQUIRED BLOOD GROUP"
        android:textColor="#FF0000"
        android:fontFamily="serif"
        android:textSize="18dp"
        android:id="@+id/textView" />
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/Apositive"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></RelativeLayout>
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/Apositive"
        android:id="@+id/Bpositive"
        android:layout_alignLeft="@+id/Apositive"
        android:layout_alignStart="@+id/Apositive"></RelativeLayout>
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ABpositive"
        android:layout_below="@+id/Bpositive"
        android:layout_alignLeft="@+id/Bpositive"
        android:layout_alignStart="@+id/Bpositive"></RelativeLayout>
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/ABpositive"
        android:id="@+id/Opositive"
        android:layout_alignLeft="@+id/ABpositive"
        android:layout_alignStart="@+id/ABpositive"></RelativeLayout>
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/Apositive"
        android:layout_alignRight="@+id/textView"
        android:id="@+id/Anegative"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"></RelativeLayout>
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/Anegative"
        android:id="@+id/Bnegative"
        android:layout_alignLeft="@+id/Anegative"
        android:layout_alignStart="@+id/Anegative"></RelativeLayout>
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/Bnegative"
        android:id="@+id/ABnegative"
        android:layout_alignLeft="@+id/Bnegative"
        android:layout_alignStart="@+id/Bnegative"></RelativeLayout>
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/Onegative"
        android:layout_below="@+id/ABnegative"
        android:layout_alignLeft="@+id/ABnegative"
        android:layout_alignStart="@+id/ABnegative"></RelativeLayout>

</RelativeLayout>
</RelativeLayout>